##########
# COLORS #
##########

[colors]
black = #000
lightgrey = #aaa
darkgrey = #555
red = #f00
i3blue = 

background = ${self.black}
foreground = ${self.lightgrey}
foreground-alt = ${self.darkgrey}
primary = #ffb52a
secondary = ${self.darkgrey}
alert = #bd2c40
padding = #440099
upadding = ${self.padding}
underline = #337733
h1-bg = ${self.background}

#######
# BAR #
#######

[bar/cami]
width = 100%
height = 20

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-bottom-size = 
border-color = ${self.background}

module-margin-left = 1
module-margin-right = 1

separator = |

font-0 = Bitstream Vera Sans Mono:size=10;1

modules-left = i3
modules-right = xbacklight volume memory cpu wlan eth battery temperature date powermenu

tray-position = right

wm-restack = i3

cursor-click = pointer

#############
## MODULES ##
#############

######
# I3 #
######
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
enable-scroll = false
enable-click = false

label-focused = %index%
label-focused-underline = #9fb6cd
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-urgent = %index%
label-urgent-foreground = #F00
label-urgent-padding = 1

#######
# mpd #
#######
[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

##############
# xbacklight #
##############
[module/xbacklight]
type = internal/xbacklight
enable-scroll = false

format = <ramp> <label>
label = %percentage%%

ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑 

#######
# cpu #
#######
[module/cpu]
type = internal/cpu

interval = 2
format = <label>
format-prefix = "CPU "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage%%

;ramp-load-0 = ▁
;ramp-load-1 = ▂
;ramp-load-2 = ▃
;ramp-load-3 = ▄
;ramp-load-4 = ▅
;ramp-load-5 = ▆
;ramp-load-6 = ▇
;ramp-load-7 = █

##########
# memory #
##########
[module/memory]
type = internal/memory

interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #4bffdc
label = %gb_used%/%gb_free%

########
# wlan #
########
[module/wlan]
type = internal/network
interface = wlp7s0
interval = 2

format-connected = <label-connected>
;format-connected-underline = #9f78e1
label-connected = %essid% %local_ip%

ramp-signal-0 = 😱
ramp-signal-1 = 😠
ramp-signal-2 = 😒
ramp-signal-3 = 😊
ramp-signal-4 = 😃
ramp-signal-5 = 😈
ramp-signal-foreground = ${colors.foreground}

#######
# eth #
#######
[module/eth]
type = internal/network
interface = net0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

########
# date #
########
[module/date]
type = internal/date
interval = 1

date = %a. %b %d %Y
time = %l:%M:%S

format = <label>
;format-underline = #0a6cf5

label = %date% %time%

##########
# volume #
##########
[module/volume]
type = internal/volume

format-prefix = "VOL "
format-prefix-foreground = ${colors.darkgrey}
format-volume = <label-volume> 
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

format-muted-freground = ${colors.foreground-alt}
label-muted = %percentage%%

###########
# battery #
###########
[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1

label-charging = ➤ %percentage%%
format-charging = <label-charging>

label-discharging = ☕ %percentage%%
format-discharging = <label-discharging>

format-full-prefix = "FULL "
format-full-prefix-foreground = ${colors.foreground-alt}

#############
# powermenu #
#############
[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = power options
label-open-foreground = ${colors.secondary}
label-close = close
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

; vim:ft=dosini
